<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/DeclarativeSchema/etc/schema.xsd">

    <table name="test_product_deduplication" resource="default" engine="innodb" comment="Product Deduplication Upload Data">
        <column name="id" xsi:type="int" nullable="false" identity="true" comment="ID"/>
        <column name="admin_user_id" xsi:type="int" nullable="false" comment="Admin User ID"/>
        <column name="file_path" xsi:type="text" nullable="false" comment="Uploaded CSV Location"/>
        <column name="payload" xsi:type="longtext" nullable="false" comment="JSON encoded data (valid/invalid/warning rows)"/>
        <column name="created_at" xsi:type="timestamp" default="CURRENT_TIMESTAMP" nullable="false" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
